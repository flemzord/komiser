{
  "name": "Go",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "1.16",
      "NODE_VERSION": "none"
    }
  },
  "runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
  "settings": {
    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "go.gopath": "/go",
    "go.goroot": "/usr/local/go"
  },
  "extensions": [
    "golang.Go"
  ],
  "postCreateCommand": "go mod download",
  "remoteUser": "vscode"
}